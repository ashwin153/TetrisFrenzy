<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
   <style name="DefaultText" parent="@android:style/TextAppearance">
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
   </style>
   
   <style name="DefaultText.XSmall">
        <item name="android:textSize">10sp</item>
    </style>
    
      <style name="DefaultText.Small">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="DefaultText.Medium">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="DefaultText.Large">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="DefaultText.XLarge">
        <item name="android:textSize">45sp</item>
    </style>
    
</resources>